{
    "name": "genial-framework/core",
    "type": "library",
    "keywords": [
        "php7",
        "library",
        "php-framework",
        "genial-framework",
        "core"
    ],
    "description": "Core classes, functions, and constants for Genial Framework.",
    "homepage": "https://github.com/Genial-Framework/Core",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nicholas English",
            "email": "nenglish0820@outlook.com",
            "homepage": "https://github.com/Nenglish7",
            "role": "Developer"
        },
        {
            "name": "Genial Contributors",
            "homepage": "https://github.com/orgs/Genial-Framework/people",
            "role": "Contribute"
        }
    ],
    "require": {
        "php": "^7.0",
        "genial-framework/env": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Genial\\Core\\": "src/"
        },
        "files": ["main.bootstrap.php"]
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
